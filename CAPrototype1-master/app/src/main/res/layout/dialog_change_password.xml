<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp"
    android:minWidth="300dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        style="@style/DialogHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Passwort Ã¤ndern"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Du solltest ein sicheres Passwort verwenden, das du nirgendwo sonst verwendest" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Aktuelles Passwort"
            android:textColorHint="@color/colorPrimaryText"
            android:ems="20"
            style="@style/AppTextNormalLight"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <EditText
            android:id="@+id/newPassword1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Neues Passwort"
            android:textColorHint="@color/colorPrimaryText"
            android:ems="20"
            style="@style/AppTextNormalLight"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <EditText
            android:id="@+id/newPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Neues Passwort erneut eingeben"
            android:textColorHint="@color/colorPrimaryText"
            android:ems="20"
            style="@style/AppTextNormalLight"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            style="@style/AppButtonLight"
            android:paddingBottom="0dp"/>

        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            style="@style/AppButtonLight"
            android:paddingBottom="0dp"/>

    </LinearLayout>

</LinearLayout>
